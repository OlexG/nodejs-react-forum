{
	"name": "Forum",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"engines": {
		"node": "14.15.5"
	},
	"scripts": {
		"test": "mocha -r ts-node/register tests/middleWare.ts",
		"start": "node dist/index.js",
		"start-dev": "nodemon --watch '**' --ext 'ts,json' --exec 'npx ts-node server/index.ts'",
		"build": "cd client && npm install && npm run build && cd .. && npx tsc",
		"client": "npm start --prefix client",
		"dev": "run-p server client",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,ts}": [
			"eslint server/*/**.ts --fix",
			"eslint client/src/*/**.js --fix",
			"npx pretty-quick --staged"
		],
		"**/*.css": [
			"npx stylelint \"**/*.css\""
		]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.0.1",
		"body-parser": "^1.19.0",
		"celebrate": "^14.0.0",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"long-timeout": "^0.1.1",
		"mongodb": "^3.6.4",
		"mongoose": "^5.12.5",
		"multer": "^1.4.2",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/body-parser": "^1.19.0",
		"@types/chai": "^4.2.16",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.11",
		"@types/express-serve-static-core": "^4.17.19",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/long-timeout": "^0.1.0",
		"@types/mocha": "^8.2.2",
		"@types/mongodb": "^3.6.12",
		"@types/mongoose": "^5.10.5",
		"@types/multer": "^1.4.5",
		"@types/node": "^14.14.37",
		"@types/proxyquire": "^1.3.28",
		"@types/sinon": "^10.0.2",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"chai": "^4.3.4",
		"eslint": "^7.21.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.3.1",
		"eslint-plugin-react": "^7.22.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"mocha": "^8.3.2",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.1",
		"pretty-quick": "^3.1.1",
		"proxyquire": "^2.1.3",
		"sinon": "^10.0.0",
		"stylelint-config-standard": "^22.0.0",
		"stylint": "^2.0.0",
		"supertest": "^6.1.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4"
	}
}
